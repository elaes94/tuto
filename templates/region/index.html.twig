{% extends 'base.html.twig' %}

{% block title %}Région{% endblock %}

{% block body %}
    <h1 class="mb-2">Liste des régions</h1>
    <a href="{{ path('app_region_new') }}" class="btn">Ajouter</a>

    <div class="flex flex-wrap justify-items-stretch">
    {% for region in regions %}
        <div class="basis-1 md:basis-1/4 m-5">
            <a href="{{ path('app_region_edit', {'id': region.id}) }}">
                <div class="block p-6 rounded-lg shadow-lg border-2 bg-white min-h-full">
                    <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">{{ region.name }}</h5>
                    
                </div>
            </a>
        </div>
    {% else %}
        <p>Vous n'avez pas encore d'activités</p>
    {% endfor %}
    </div>
{% endblock %}
