{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="mb-2">Liste des utilisateurs</h1>


    <div class="flex flex-wrap justify-items-stretch">
    {% for user in users %}
        <div class="basis-1 md:basis-1/4 m-5">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                <div class="block p-6 rounded-lg shadow-lg border-2 bg-white min-h-full">
                    <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">{{ user.firstname }} {{ user.lastname }}</h5>
                    <p>{{ user.email }}</p>
                </div>
            </a>
        </div>
    {% else %}
        <p>Aucun utilisateur</p>
    {% endfor %}
    </div>
{% endblock %}
